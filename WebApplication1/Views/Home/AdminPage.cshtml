@model IEnumerable<WebApplication1.Models.RequestModel>
   @{
       ViewBag.Title = "Index";
} 
<h2>Полученные заявки</h2>


<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>E-mail</th>
            <th>Описание</th>
            <th>Изображение</th>
            <th>Обратная связь</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.Raw("<img style='width:240px; height:200px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.Image) + "\" />")
                </td>
                <td>
                    <a href="#myModal" class="btn btn-primary" data-toggle="modal" @*id="@item.Id"*@>Отправить решение</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- HTML-код модального окна -->
<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Заголовок модального окна -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Отправка решения проблемы</h4>
            </div>
            <!-- Основное содержимое модального окна -->
            <div class="modal-body">
               
                <form method="post" action="SentEmail">

                    <div class="form-group">
                        <label for="customerName" class="control-label">Введите Ваше имя</label>
                        <input type="text" name="customerName" class="form-control" placeholder="Имя" />

                    </div>

                    <div class="form-group">
                        <label for="customerEmail" class="control-label">Введите E-mail назначения</label>
                        <input type="text" name="customerEmail" class="form-control" placeholder="Имя" value=""id="sds" />

                    </div>

                    <div>
                        <label for="customerRequest" class="control-label">Опишите решение проблемы</label>
                        <textarea name="customerRequest" class="form-control" cols="45" rows="4"></textarea>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-info" value="Submit" />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                     

                    </div>
                    
                </form>
</div>


            
            
        </div>

    </div>
</div>